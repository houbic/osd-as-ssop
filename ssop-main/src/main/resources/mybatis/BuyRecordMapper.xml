<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.osd.ssop.mybatis.BuyRecordMapper">

	<!-- 映射返回字段类型 -->
	<resultMap type="com.osd.ssop.entity.SmsBuyRecord"
		id="entityMapper">
		<result property="accountId" column="account_id" />
		<result property="name" column="name" />
		<result property="count" column="count" />
		<result property="unitPrice" column="unit_price" />
		<result property="totalPrice" column="total_price" />
		<result property="buyTime" column="buy_time" />
	</resultMap>

	<select id="queryBuyRecord" resultMap="entityMapper">
		SELECT  account_id, name, count, unit_price, total_price, buy_time
		FROM msg_buy_record
		  WHERE account_id = #{accountId}
		  ORDER BY buy_time DESC
	</select>

</mapper>
